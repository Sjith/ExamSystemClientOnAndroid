<resources>
    <style name="Theme" parent="android:style/Theme" />

    <style name="Theme.ExamSystem" parent="@style/Theme.Sherlock.Light">
        <item name="android:windowContentOverlay">@null</item>
        <item name="selectableItemBackground">@drawable/item_background_light</item>
        <item name="abIcon">@drawable/logo_exam_system_small</item>
        <item name="abTitleTextStyle">@style/ActionBarText</item>
        <item name="android:textColor">@color/black_text_primary</item>
    </style>

    <style name="Theme.ExamSystem.Dashboard" parent="style/Theme.ExamSystem">
        <item name="abTitle">@string/dashboard_title</item>
    </style>

    <style name="Theme.ExamSystem.ExamList" parent="style/Theme.ExamSystem">
        <item name="abTitle">@string/exam_list_title</item>
        <item name="abDisplayOptions">useLogo|showHome|showTitle|homeAsUp</item>
    </style>

    <style name="Theme.ExamSystem.Paper" parent="style/Theme.ExamSystem">
        <item name="abTitle">@string/exam_list_title</item>
        <item name="abDisplayOptions">useLogo|showHome|showTitle|homeAsUp</item>
    </style>
    
    <style name="ActionBarText">
        <item name="android:textSize">@dimen/text_size_xlarge</item>
    </style>

    <style name="DashboardButton">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:drawablePadding">2dp</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:background">@null</item>
    </style>
    
    <style name="NoticeSlidingDrawer">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
    </style>

    <style name="PaperSlidingDrawer">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
    </style>
    
    <style name="NoticeSlidingDrawerHandle">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:paddingLeft">@dimen/padding_small</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/sliding_drawer_handle</item>
    </style>
    
    <style name="PaperSlidingDrawerHandle">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/sliding_drawer_handle</item>
    </style>
    
    <style name="NoticeSlidingDrawerTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:text">@string/sliding_drawer_notice_title</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>
    
    <style name="PaperSlidingDrawerTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:text">@string/remain_time</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>
    
    <style name="NoticeSlidingDrawerSubtitleViewFlipper" parent="NoticeSlidingDrawerTitle">
        <item name="android:inAnimation">@anim/push_up_in</item>
        <item name="android:outAnimation">@anim/push_up_out</item>
        <item name="android:autoStart">true</item>
        <item name="android:flipInterval">@integer/flip_interval_medium</item>
    </style>

    <style name="NoticeSlidingDrawerSubtitle" parent="NoticeSlidingDrawerSubtitleViewFlipper">
        <item name="android:text">@string/app_name</item>
        <item name="android:singleLine">true</item>
    </style>
        
    <style name="NoticeSlidingDrawerContent">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@drawable/sliding_drawer_content</item>
    </style>
        
    <style name="PaperSlidingDrawerContent" parent="NoticeSlidingDrawerContent">
    </style>
    
    <style name="PaperSlidingDrawerSubmitButton">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">@dimen/padding_small</item>
        <item name="android:layout_marginLeft">@dimen/padding_small</item>
        <item name="android:text">@string/submit_answer</item>
        <item name="android:textSize">@dimen/text_size_large</item>
    </style>
    
    <style name="ExamListPager">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
    </style>
    
    <style name="ExamListFragment">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>
    
    <style name="CreateExamFragment">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>
        
    <style name="NoticeSlidingDrawerContentNoticeList">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
    </style>
        
    <style name="PaperSlidingDrawerContentQuestionList" parent="NoticeSlidingDrawerContentNoticeList">
    </style>
    
    <style name="ExamList">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
    </style>
    
    <style name="NoticeListItem">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingLeft">@dimen/padding_small</item>
        <item name="android:paddingRight">@dimen/padding_small</item>
    </style>
    
    <style name="QuestionListItem">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:padding">@dimen/padding_medium</item>
        <item name="android:descendantFocusability">blocksDescendants</item>
    </style>
    
    <style name="ExamListItem">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingLeft">@dimen/padding_small</item>
        <item name="android:paddingRight">@dimen/padding_small</item>
    </style>
    
    <style name="NoticeListItemName">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_gravity">center_vertical|left</item>
        <item name="android:textColor">@color/black_text_darker</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="QuestionListItemContent">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_gravity">center_vertical|right</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textColor">@color/black_text_darker</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="QuestionListItemIndex" parent="QuestionListItemContent">
        <item name="android:layout_weight">0</item>
        <item name="android:paddingLeft">@dimen/padding_small</item>
        <item name="android:paddingRight">@dimen/padding_small</item>
    </style>

    <style name="QuestionListItemCheckBox" parent="QuestionListItemIndex">
        <item name="android:layout_gravity">center_vertical|left</item>
    </style>
    
    <style name="ExamListItemName">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_gravity">center_vertical|left</item>
        <item name="android:textColor">@color/black_text_darker</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:singleLine">true</item>
    </style>
    
    <style name="NoticeListItemPublicTime" parent="NoticeListItemName">
        <item name="android:layout_gravity">center_vertical|right</item>
        <item name="android:layout_weight">0</item>
        <item name="android:textColor">@color/black_text_primary</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:singleLine">false</item>
    </style>
    
    <style name="ExamListItemLastTime" parent="ExamListItemName">
        <item name="android:layout_gravity">center_vertical|right</item>
        <item name="android:layout_weight">0</item>
        <item name="android:textColor">@color/black_text_primary</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:singleLine">false</item>
    </style>
    
    <style name="NoticeListItemContent" parent="NoticeListItemName">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/black_text_primary</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:singleLine">false</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="ExamListItemStartTime" parent="ExamListItemName">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_gravity">center|left</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/black_text_primary</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>

    <style name="ExamListItemEndTime" parent="ExamListItemStartTime">
        <item name="android:layout_gravity">center|right</item>
        <item name="android:gravity">center|right</item>
    </style>
    
    <style name="ExamEditLayout">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">@dimen/padding_small</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="ExamEditTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textColor">@color/black_text_darker</item>
    </style>

    <style name="ExamEdit">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
    </style>
    
    <style name="PaperIndicator">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:padding">@dimen/padding_small</item>
        <item name="footerColor">@color/blue_light</item>
        <item name="textColor">@color/black_text_primary</item>
        <item name="selectedColor">@color/black_text_darker</item>
        <item name="topPadding">0dp</item>
    </style>
    
    <style name="PaperPager">
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_width">fill_parent</item>
    </style>
    
    <style name="QuestionContent">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/hello</item>
        <item name="android:textColor">@color/black_text_darker</item>
        <item name="android:textSize">@dimen/text_size_large</item>
    </style>
    
    <style name="QuestionOption" parent="QuestionContent">
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>
    
    <style name="PaperStartFragmentTextRight">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">right</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:paddingTop">@dimen/padding_small</item>
        <item name="android:paddingBottom">@dimen/padding_small</item>
    </style>
    
    <style name="PaperStartFragmentTextLeft" parent="PaperStartFragmentTextRight">
        <item name="android:gravity">left</item>
    </style>
    
    <style name="PaperEndFragmentText" parent="PaperStartFragmentTextRight">
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text_size_huge</item>
    </style>
    
    <style name="PaperStartFragmentStartExamButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/padding_large</item>
        <item name="android:text">@string/start_exam</item>
        <item name="android:textSize">@dimen/text_size_large</item>
    </style>
    
    <style name="PaperEndFragmentFinishExamButton" parent="PaperStartFragmentStartExamButton">
        <item name="android:text">@string/submit_answer</item>
    </style>

</resources>
