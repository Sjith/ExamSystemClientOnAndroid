    <style name="DashboardButton">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:drawablePadding">2dp</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:background">@null</item>
    </style>
    
    <style name="DashboardSlidingDrawer">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
    </style>
    
    <style name="DashboardSlidingDrawerHandle">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:paddingLeft">@dimen/padding_small</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/dashboard_sliding_drawer_handle</item>
    </style>
    
    <style name="DashboardSlidingDrawerTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:text">@string/dashboard_sliding_drawer_title</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>
    
    <style name="DashboardSlidingDrawerSubtitleViewFlipper" parent="DashboardSlidingDrawerTitle">
        <item name="android:inAnimation">@anim/push_up_in</item>
        <item name="android:outAnimation">@anim/push_up_out</item>
        <item name="android:autoStart">true</item>
        <item name="android:flipInterval">@integer/flip_interval_medium</item>
    </style>

    <style name="DashboardSlidingDrawerSubtitle" parent="DashboardSlidingDrawerSubtitleViewFlipper">
        <item name="android:text">@string/app_name</item>
        <item name="android:singleLine">true</item>
    </style>
        
    <style name="DashboardSlidingDrawerContent">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@drawable/dashboard_sliding_drawer_content</item>
    </style>
    
    <style name="ExamListPager">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>
    
    <style name="ExamListFragment">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>
    
    <style name="CreateExamFragment">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>
        
    <style name="DashboardSlidingDrawerContentNoticeList">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
    </style>
    
    <style name="ExamList">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
    </style>
    
    <style name="NoticeListItem">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingLeft">@dimen/padding_small</item>
        <item name="android:paddingRight">@dimen/padding_small</item>
    </style>
    
    <style name="ExamListItem">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingLeft">@dimen/padding_small</item>
        <item name="android:paddingRight">@dimen/padding_small</item>
    </style>
    
    <style name="NoticeListItemName">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_gravity">center_vertical|left</item>
        <item name="android:textColor">@color/black_text_darker</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:singleLine">true</item>
    </style>
    
    <style name="ExamListItemName">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_gravity">center_vertical|left</item>
        <item name="android:textColor">@color/black_text_darker</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:singleLine">true</item>
    </style>
    
    <style name="NoticeListItemPublicTime" parent="NoticeListItemName">
        <item name="android:layout_gravity">center_vertical|right</item>
        <item name="android:layout_weight">0</item>
        <item name="android:textColor">@color/black_text_primary</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:singleLine">false</item>
    </style>
    
    <style name="ExamListItemLastTime" parent="ExamListItemName">
        <item name="android:layout_gravity">center_vertical|right</item>
        <item name="android:layout_weight">0</item>
        <item name="android:textColor">@color/black_text_primary</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:singleLine">false</item>
    </style>
    
    <style name="NoticeListItemContent" parent="NoticeListItemName">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/black_text_primary</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:singleLine">false</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="ExamListItemStartTime" parent="ExamListItemName">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_gravity">center|left</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/black_text_primary</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>

    <style name="ExamListItemEndTime" parent="ExamListItemStartTime">
        <item name="android:layout_gravity">center|right</item>
        <item name="android:gravity">center|right</item>
    </style>
    
    <style name="ExamEditLayout">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">@dimen/padding_small</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="ExamEditTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textColor">@color/black_text_darker</item>
    </style>

    <style name="ExamEdit">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
    </style>
    
    <style name="PaperIndicator">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:padding">@dimen/padding_small</item>
        <item name="footerColor">@color/blue_light</item>
        <item name="textColor">@color/black_text_primary</item>
        <item name="selectedColor">@color/black_text_darker</item>
        <item name="topPadding">0dp</item>
    </style>
    
    <style name="PaperPager">
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_weight">1</item>
    </style>
    
    <style name="QuestionContent">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/hello</item>
        <item name="android:textColor">@color/black_text_darker</item>
        <item name="android:textSize">@dimen/text_size_large</item>
    </style>
    
    <style name="QuestionOption" parent="QuestionContent">
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>
    
