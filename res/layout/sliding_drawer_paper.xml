<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" >

    <org.scauhci.ExamSystem.android.view.paper.PaperSlidingDrawer
        android:id="@+id/sliding_drawer_paper"
        style="@style/PaperSlidingDrawer"
        android:content="@+id/sliding_drawer_paper_content"
        android:handle="@+id/sliding_drawer_paper_handle" >

        <LinearLayout
            android:id="@id/sliding_drawer_paper_handle"
            style="@style/PaperSlidingDrawerHandle" >

            <TextView
                android:id="@+id/sliding_drawer_paper_title"
                style="@style/PaperSlidingDrawerTitle" />
        </LinearLayout>

        <LinearLayout
            android:id="@id/sliding_drawer_paper_content"
            style="@style/PaperSlidingDrawerContent" >

            <org.scauhci.ExamSystem.android.view.paper.QuestionListView
                android:id="@+id/sliding_drawer_paper_content_list_question"
                style="@style/PaperSlidingDrawerContentQuestionList" >
            </org.scauhci.ExamSystem.android.view.paper.QuestionListView>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/sliding_drawer_paper_submit_button"
                    style="@style/PaperSlidingDrawerSubmitButton" />
            </LinearLayout>
        </LinearLayout>
    </org.scauhci.ExamSystem.android.view.paper.PaperSlidingDrawer>

</merge>